<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="20dp"
    tools:context="AsesmenGanjilRahmania.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:hint="Masukkan Nama Anda : "
            android:inputType="textPersonName" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:hint="Masukkan Alamat : "
            android:inputType="text"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:hint="Masukkan no telp : "
            android:inputType="phone"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:hint="Masukkan Jenis Kelamin : "
            android:inputType="text"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="30dp"
            android:text="Pilih Ekstrakurikuler"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="15dp"
            android:entries="@array/ekstra" />

    </LinearLayout>

<LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Formulir Pendaftaran"
            android:textSize="28sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EKSTRAKURIKULER"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:text="SIMPAN"
            android:textColor="@color/white"
            android:backgroundTint="#0c1844"/>
    </LinearLayout>
</LinearLayout>